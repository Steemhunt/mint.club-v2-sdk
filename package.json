{
  "name": "mint.club-v2-sdk",
  "files": [
    "./src"
  ],
  "type": "module",
  "version": "0.0.5",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.mts",
  "homepage": "https://github.com/Steemhunt/mint.club-v2-sdk",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "npm run purge && npx pkgroll",
    "test": "npx bun test",
    "test:watch": "npx bun test --watch",
    "purge": "rm -rf ./dist",
    "deploy": "git add . && git commit -m 'SDK update' && npm version patch && git push && npm publish",
    "postinstall": "npm run build --verbose"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "bun": "^1.0.25",
    "bun-types": "latest",
    "pkgroll": "^2.0.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.12",
    "abitype": "^1.0.0",
    "viem": "latest"
  }
}
